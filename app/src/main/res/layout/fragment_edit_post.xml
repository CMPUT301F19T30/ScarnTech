<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:background="@color/moodiMediumBlue"
            android:orientation="horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <!--            Emotional State              -->
            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Emotional State:"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:textColor="#000000"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/input_EmotionalState_Spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/EmotionalStates"
                android:prompt="@string/Emo_propmt" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <!--            Reasoning              -->
            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:text="Reasoning:"
                android:textColor="#000000"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/input_Reasoning"
                android:layout_width="292dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:maxLength="20" />
        </LinearLayout>

    <!--            Social Situation              -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Social Situation:"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:textColor="#000000"
            android:textSize="20sp" />

        <Spinner
            android:id="@+id/input_SocialSituation_Spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/social_situation"/>
    </LinearLayout>
        <!--            Date              -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView23"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:text="Date:"
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/edit_Date_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:text="The Date"
                android:textSize="20sp" />
        </LinearLayout>

        <!--            Location              -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:text="Location:"
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/edit_Location_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:text="The Location"
                android:textSize="20sp" />
        </LinearLayout>

        <!--            Image              -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/textView27"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Image:"
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/edit_Photo_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:text="Photo Availability"
                android:textSize="20sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/edit_photo"
            android:layout_width="match_parent"
            android:layout_height="307dp"
            android:gravity="center" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>