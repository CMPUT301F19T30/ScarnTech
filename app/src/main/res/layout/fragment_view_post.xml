<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:orientation="horizontal">

            <!--            Username             -->
            <TextView
                android:id="@+id/input_User_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/moodiBackground2"
                android:fontFamily="@font/rancho"
                android:gravity="center_horizontal"
                android:text="Username"
                android:textColor="@color/moodiBlack"
                android:textSize="30sp"
                android:onClick="onClick"
                android:clickable="true"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <!--            Emotional State              -->
<!--            <TextView-->
<!--                android:id="@+id/textView1"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="match_parent"-->
<!--                android:paddingLeft="10dp"-->
<!--                android:paddingRight="10dp"-->
<!--                android:text="Emotional State:"-->
<!--                android:textColor="#000000"-->
            <!--                android:textSize="25sp" />-->

            <TextView
                android:id="@+id/input_EmotionalState_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:gravity="center_horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="The Emotional State"
                android:textSize="25sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <!--            Reasoning              -->
            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reasoning:"
                android:textColor="#000000"
                android:textSize="20sp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"/>

            <TextView
                android:id="@+id/input_Reasoning_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:text="The Reasoning"
                android:textSize="20sp" />
        </LinearLayout>

        <!--            Social Situation              -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:text="Social Situation:"
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/input_SocialSituation_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:text="The Social Situation"
                android:textSize="20sp" />
        </LinearLayout>

        <!--            Date              -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:text="Date:"
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/input_Date_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:text="The Date"
                android:textSize="20sp" />
        </LinearLayout>

        <!--            Location              -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:text="Location:"
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/input_Location_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:text="The Location"
                android:textSize="20sp" />
        </LinearLayout>

        <!--            Image              -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/imageTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Image:"
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/view_Photo_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:text="Photo Availability"
                android:textSize="20sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/view_photo"
            android:layout_width="match_parent"
            android:layout_height="285dp"
            android:gravity="center"/>

</LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>