<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/moodiBackground"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:paddingLeft="32dp"
    android:paddingRight="32dp">

    <TextView
        android:id="@+id/following_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/moodiBackground"
        android:padding="@dimen/text_padding"
        android:text="Following"
        android:textColor="@color/moodiWhite"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/following_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/circle_background"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:textAlignment="center"
        android:text="0"
        android:textColor="@color/moodiDarkBlue"
        app:layout_constraintStart_toEndOf="@id/following_text"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/followers_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/moodiBackground"
        android:padding="@dimen/text_padding"
        android:text="Followers"
        android:textColor="@color/moodiWhite"
        app:layout_constraintEnd_toStartOf="@id/followers_number"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/followers_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/circle_background"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:textAlignment="center"
        android:text="0"
        android:textColor="@color/moodiDarkBlue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>