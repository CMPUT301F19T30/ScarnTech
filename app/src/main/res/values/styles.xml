<resources>
    <style
        name="MoodiTheme"
        parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/moodiMediumBlue</item>
        <item name="colorPrimaryDark">@color/moodiDarkBlue</item>
        <item name="colorAccent">@color/moodiDarkBlue</item>
    </style>

    <style name="MoodiText" parent="@style/Widget.AppCompat.TextView">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/moodiDarkBlue</item>
    </style>

    <style name="MoodiTitle" parent="@style/Widget.AppCompat.TextView">
        <item name="android:textSize">60sp</item>
        <item name="android:textColor">@color/moodiDarkBlue</item>
        <item name="android:fontFamily">@font/rancho</item>
        <item name="android:ems">8</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="MoodiSubtitle" parent="@style/Widget.AppCompat.TextView">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/moodiDarkBlue</item>
        <item name="android:fontFamily">@font/rancho</item>
        <item name="android:ems">8</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="MoodiEditText" parent="@style/Widget.AppCompat.EditText">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/moodiDarkBlue</item>
        <item name="background">@drawable/edit_text_background</item>
        <item name="android:padding">@dimen/text_padding</item>
        <item name="android:layout_marginRight">@dimen/text_vertical_margin</item>
        <item name="android:layout_marginLeft">@dimen/text_vertical_margin</item>
    </style>

</resources>
